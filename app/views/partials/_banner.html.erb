<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
    <div style="background-image: url(<%= image_path "carousel-image-1.jpg" %>)" class="w-100 carousel-image"></div>
    <%= image_tag "carousel-image-1.jpg", alt:"carousel-1"%>
    <!--<img src="https://i.ibb.co/zr68rrR/alexander-andrews-X62-F1-WQhu-LI-unsplash-1.jpg" class="d-block w-100" alt="carousel-1"> -->
    </div>
    <div class="carousel-caption">
      <h3>Welcome to Cameroo</h3>
      <p>where you can offer and rent photography equipment</p>
    </div>
    <div class="carousel-item">
      <div style="background-image: url(<%= image_path "52.png" %>)" class="w-100 carousel-image"></div>
      <!--<img src="https://i.ibb.co/8MJh6F2/video-equipment-and-software-1982x1114-1-1024x576.jpg" class="d-block w-100" alt="carousel-2"> -->
    </div>
    <div class="carousel-item">
      <div style="background-image: url(<%= image_path "big-dslr-camera-and-equipment.jpg" %>)" class="w-100 carousel-image"></div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
