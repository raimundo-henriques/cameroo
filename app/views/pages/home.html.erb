<!DOCTYPE html>
<html>
  <head>
    <title>Cameroo</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render "partials/banner" %>
    <%= yield %>
    <div class="container shadow-sm bg-white rounded p-4">
      <div class="row cards mt-5">
        <%# <h1 class="text-center pb-4">Recent Cameras</h1> %>
        <% Item.first(6).each do |item| %>
        <div class="col-xs-12 col-md-6 col-lg-4 px-4 py-3">
          <div class="card card-category shadow-sm">
          <%= link_to(item_path(item)) do %>
            <%= cl_image_tag item.photo.key, class:"w-100"%>
          <% end %>
            <div class="card-body">
              <h5 class="card-title pt-3"><%= item.name %></h5>
              <div class="card-btn-and-price d-flex justify-content-between align-items-center px-5">
                <p class="card-text"><%= (item.price / 100).round()  %>â‚¬</p>
                <%= link_to "See more", item_path(item), class:""%>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
