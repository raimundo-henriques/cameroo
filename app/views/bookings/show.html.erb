<div class="container my-4 py-4 px-2 shadow-sm bg-white rounded">
      <h1 class="text-center my-5 pt-3"><%= @booking.item.name %></h1>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-sm-12 col-md-6 photo-and-description d-flex flex-column align-items-center">
            <%= cl_image_tag @booking.item.photo.key, class: "w-75 shadow-sm" %>
            <p class="mt-3 w-100"><%= @booking.item.description %></p>
          </div>
          <div class="buttons-and-price col-sm-12 col-md-4">
              <div class="text-start w-100 shadow-sm bg-white p-5 rounded">
                <p class="text-truncate">Rented by <%= @booking.item.user.email %></p>
                <p>Start date: <%= @booking.start_date %></p>
                <p>End date: <%= @booking.end_date %></p>
                <p>Total price: <%= ((@booking.item.price * (@booking.end_date - @booking.start_date)) / 100).round() %>â‚¬</p>

                <% if policy(@booking).update? %>
                  <%= link_to "Update", edit_booking_path(@booking), class: 'btn btn-primary mt-3'%>
                <% end %>
                <% if policy(@booking).destroy? %>
                  <%= link_to "Cancel", booking_path(@booking), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-primary mt-3'  %>
                <% end %>
                <%= link_to "Back", :back, class: 'btn btn-outline-secondary mt-3' %>
              </div>
          </div>
        </div>
      </div>
</div>
